MEALIE_NAME=                       # Container name (e.g., mealie)
MEALIE_IMAGE=                      # Docker image (e.g., ghcr.io/mealie-recipes/mealie)
MEALIE_TAG=                        # Image tag/version (e.g., latest)
MEALIE_IP=                         # Static IP (e.g., 192.168.1.247)
MEALIE_DATA_PATH=                 # Host path for persistent data (e.g., /etc/meal/mealie/data)
MEALIE_BASE_URL=                  # Public base URL (e.g., https://pantry.abjuration.home)
MEALIE_ALLOW_SIGNUP=              # Allow public signups (true/false)

TZ=                               # Timezone (e.g., Australia/Sydney)
LOG_DRIVER=                       # Logging driver (e.g., json-file)
LOG_SIZE=                         # Max log size per file (e.g., 200m)
LOG_FILES=                        # Max number of rotated log files (e.g., 5)
HEALTH_INTERVAL=                  # Healthcheck interval (e.g., 30s)
HEALTH_TIMEOUT=                   # Healthcheck timeout (e.g., 10s)
HEALTH_RETRIES=                   # Healthcheck retries (e.g., 5)
HEALTH_START=                     # Healthcheck start delay (e.g., 15s)

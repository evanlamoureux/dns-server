# Grafana
GRAFANA_IMAGE=                         # Docker image (e.g., grafana/grafana)
GRAFANA_TAG=                           # Image tag (e.g., latest)
GRAFANA_NAME=                          # Container name (e.g., grafana)
GRAFANA_IP=                            # Static IP (e.g., 192.168.1.248)
GRAFANA_PROVISIONING_PATH=            # Host path to provisioning dir
GRAFANA_CERT_CRT=                     # Host path to Caddy-issued CRT
GRAFANA_CERT_PEM=                     # Host path to Caddy-issued PEM
GRAFANA_DATA_PATH=                    # Host path for Grafana data
GRAFANA_LOG_PATH=                     # Host path for Grafana logs
GRAFANA_PLUGIN_PATH=                  # Host path for Grafana plugins

# Prometheus
PROMETHEUS_IMAGE=                     # Docker image (e.g., prom/prometheus)
PROMETHEUS_TAG=                       # Image tag (e.g., latest)
PROMETHEUS_NAME=                      # Container name
PROMETHEUS_IP=                        # Static IP (e.g., 192.168.1.249)
PROMETHEUS_CONFIG_PATH=              # Prometheus config dir (e.g., /etc/metrics/prometheus)

# Loki
LOKI_IMAGE=                           # Docker image (e.g., grafana/loki)
LOKI_TAG=                             # Image tag (e.g., 2.9.6)
LOKI_NAME=                            # Container name
LOKI_IP=                              # Static IP (e.g., 192.168.1.242)
LOKI_PORT=                            # Loki exposed port (default 3100)
LOKI_CONFIG=                          # Loki config YAML path
LOKI_DATA_PATH=                       # Data storage dir
LOKI_WAL_PATH=                        # WAL storage dir
LOKI_COMPACTOR_PATH=                  # Compactor storage dir

# Promtail
PROMTAIL_IMAGE=                       # Docker image (e.g., grafana/promtail)
PROMTAIL_TAG=                         # Image tag (e.g., latest)
PROMTAIL_NAME=                        # Container name
PROMTAIL_IP=                          # Static IP (e.g., 192.168.1.240)
PROMTAIL_CONFIG_HOST=                 # Promtail config YAML (host side)
PROMTAIL_CONFIG_CONTAINER=            # Promtail config YAML (container side)
PROMTAIL_DATA_PATH=                   # Working dir for Promtail
HOST_LOG_PATH=                        # Host log directory
PROMTAIL_HEALTH_INTERVAL=            # Healthcheck interval (e.g., 20s)
PROMTAIL_HEALTH_RETRIES=             # Healthcheck retries (e.g., 30)
PROMTAIL_HEALTH_TIMEOUT=             # Healthcheck timeout (e.g., 10s)
PROMTAIL_HEALTH_START=               # Healthcheck start delay (e.g., 10s)

# Node Exporter
NODE_EXPORTER_IMAGE=                  # Docker image (e.g., prom/node-exporter)
NODE_EXPORTER_TAG=                    # Image tag (e.g., latest)
NODE_EXPORTER_NAME=                   # Container name
NODE_EXPORTER_IP=                     # Static IP (e.g., 192.168.1.239)

# Global
TZ=                                   # Timezone (e.g., Australia/Sydney)
DNS_IP=                               # Internal DNS (e.g., Pi-hole IP)
LOG_DRIVER=                           # Log driver (e.g., json-file)
LOG_SIZE=                             # Max size per log file (e.g., 200m)
LOG_FILES=                            # Number of log file rotations
HEALTH_INTERVAL=                      # Generic healthcheck interval
HEALTH_TIMEOUT=                       # Generic healthcheck timeout
HEALTH_RETRIES=                       # Generic healthcheck retries
HEALTH_START=                         # Generic healthcheck start period

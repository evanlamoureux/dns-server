# === Memos ===
MEMOS_IMAGE=                         # Docker image (e.g., neosmemo/memos)
MEMOS_TAG=                           # Image tag (e.g., latest)
MEMOS_NAME=                          # Container name (e.g., memos)
MEMOS_IP=                            # Static IP (e.g., 192.168.1.243)
MEMOS_DATA_PATH=                     # Host path to Memos data (e.g., /etc/notes/memos/data)

# === PrivateBin ===
PRIVATEBIN_IMAGE=                    # Docker image (e.g., privatebin/nginx-fpm-alpine)
PRIVATEBIN_NAME=                     # Container name (e.g., privatebin)
PRIVATEBIN_IP=                       # Static IP (e.g., 192.168.1.244)
PRIVATEBIN_DATA_PATH=                # Path to PrivateBin data (e.g., /etc/notes/privatebin/data)
PRIVATEBIN_CONFIG_PATH=              # Path to PrivateBin config (e.g., /etc/notes/privatebin/conf)

# === Shared Settings ===
HEALTH_INTERVAL=                     # Healthcheck interval (e.g., 30s)
HEALTH_TIMEOUT=                      # Healthcheck timeout (e.g., 5s)
HEALTH_RETRIES=                      # Healthcheck retries (e.g., 3)
LOG_DRIVER=                          # Log driver (e.g., json-file)
LOG_SIZE=                            # Max log size (e.g., 200m)
LOG_FILES=                           # Max rotated logs (e.g., 5)

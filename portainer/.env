# Portainer
PORTAINER_IMAGE=                        # Docker image (e.g., portainer/portainer-ce)
PORTAINER_TAG=                          # Image tag (e.g., alpine)
PORTAINER_NAME=                         # Container name (e.g., portainer)
PORTAINER_HOSTNAME=                     # Hostname inside container (e.g., portainer)
PORTAINER_IP=                           # Static IP address (e.g., 192.168.1.246)
PORTAINER_PORT_EDGE=                    # Edge agent port (default 8000)
PORTAINER_PORT_HTTP=                    # Web interface HTTP port (default 9000)
PORTAINER_PORT_HTTPS=                   # Web interface HTTPS port (default 9443)
PORTAINER_DATA_PATH=                    # Path to persistent data (e.g., /etc/portainer/data)
PORTAINER_DOMAIN=                       # Caddy domain for reverse proxy (e.g., manage.abjuration.home)

# Global
TZ=                                     # Timezone (e.g., Australia/Sydney)
HEALTH_INTERVAL=                        # Healthcheck interval (e.g., 30s)
HEALTH_TIMEOUT=                         # Healthcheck timeout (e.g., 5s)
HEALTH_RETRIES=                         # Healthcheck retries (e.g., 3)

NEBULA_IMAGE=                             # Docker image (e.g., ghcr.io/lovelaze/nebula-sync)
NEBULA_TAG=                               # Image tag (e.g., latest)
NEBULA_NAME=                              # Container name (e.g., nebula-sync)

NEBULA_PRIMARY=                           # Primary Pi-hole URL with password (e.g., http://ph1.example.com|password)
NEBULA_REPLICAS=                          # Comma-separated list of replicas (e.g., http://ph2.example.com|password,http://ph3.example.com|password)
NEBULA_FULL_SYNC=                         # Full sync on schedule (true/false)
NEBULA_RUN_GRAVITY=                       # Run gravity update on replicas (true/false)
NEBULA_CRON=                              # Cron schedule (e.g., 0 * * * *)

# StatusOwl Dockman
STATUSOWL_IMAGE=                          # Docker image (e.g., sowlblake/statusowl-dockman)
STATUSOWL_TAG=                            # Image tag (e.g., latest)
STATUSOWL_NAME=                           # Container name (e.g., statusowl)
STATUSOWL_HOSTNAME=                       # Hostname for container
STATUSOWL_IP=                             # Static IP (e.g., 192.168.1.237)
STATUSOWL_PORT=                           # Host port to expose for healthcheck/debug (e.g., 9934)
STATUSOWL_DATA_PATH=                      # Path to persistent data (e.g., /etc/uptime/statusowl)
STATUSOWL_NODE_UUID=                      # Unique node identifier for StatusOwl
STATUSOWL_NODE_API_KEY=                   # API key for StatusOwl ingest endpoint
STATUSOWL_API_BASE=                       # Ingest API base URL

# Shared Settings
HEALTH_INTERVAL=                          # Healthcheck interval (e.g., 30s)
HEALTH_TIMEOUT=                           # Healthcheck timeout (e.g., 10s)
HEALTH_START=                             # Healthcheck start delay (e.g., 10s)
HEALTH_RETRIES=                           # Healthcheck retries (e.g., 3)
LOG_DRIVER=                               # Log driver (e.g., json-file)
LOG_SIZE=                                 # Max log size per file (e.g., 200m)
LOG_FILES=                                # Max number of rotated log files

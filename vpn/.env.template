# Tailscale
TAILSCALE_IMAGE=                          # Docker image (e.g., tailscale/tailscale)
TAILSCALE_TAG=                            # Image tag (e.g., latest)
TAILSCALE_NAME=                           # Container name (e.g., tailscale)
TAILSCALE_HOSTNAME=                       # Hostname (e.g., tailscale)
TAILSCALE_IP=                             # Static IP (e.g., 192.168.1.250)
TAILSCALE_STATE_PATH=                     # Path to Tailscale state dir (e.g., /etc/vpn/tailscale)
TAILSCALE_SOCKET_PATH=                    # Path to Tailscale sockets dir (e.g., /etc/vpn/tailscale/sockets)
TS_AUTHKEY=                               # Tailscale auth key (starts with tskey-...)
TS_EXTRA_ARGS=                            # Extra args for tailscaled (e.g., --advertise-routes=...)
TS_NO_IPV6=                               # Disable IPv6 (1 = true)

# Global
HEALTH_INTERVAL=                          # Healthcheck interval (e.g., 30s)
HEALTH_TIMEOUT=                           # Healthcheck timeout (e.g., 10s)
HEALTH_RETRIES=                           # Healthcheck retries (e.g., 3)
LOG_DRIVER=                               # Logging driver (e.g., json-file)
LOG_SIZE=                                 # Log file max size (e.g., 200m)
LOG_FILES=                                # Number of log file rotations (e.g., 5)
